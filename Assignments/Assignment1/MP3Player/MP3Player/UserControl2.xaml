<UserControl x:Name="infoBox" x:Class="MP3Player.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MP3Player"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400" Foreground="{x:Null}">
    <UserControl.Background>
        <SolidColorBrush Color="#FF99B4D1" Opacity="0.7"/>
    </UserControl.Background>
    
    <!-- text boxes for the songs title, album, artist and year-->
    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="250,0,0,0">
        <TextBox x:Name="titleTxt" TextWrapping="Wrap" Width="120" TextAlignment="Right" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontSize="24" Panel.ZIndex="5"/>
        <TextBox x:Name="albumTxt" TextWrapping="Wrap" Width="120" TextAlignment="Right" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontSize="20"/>
        <TextBox x:Name="artistYearTxt" TextWrapping="Wrap" Width="120" TextAlignment="Right" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontSize="16"/>
    </StackPanel>

</UserControl>
